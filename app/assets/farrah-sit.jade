extends templates/layout.jade

include _modules/_mixins-cases.jade

block title
	title Farrah Sit – Suzanne LaGasa | Art Director & Graphic Designer

block description
	meta(name='description', content="Farrah Sit is an independent designer who creates sculptural lighting, furniture, and home objects. My hope was to create a logo reflective of her attention to detail and refined sensibility. There’s a delicate grace in all her inventive and structural designs.")

block og_meta
	meta(property="og:title" 		content="Farrah Sit — designed by Suzanne LaGasa | Art Director & Graphic Designer")
	meta(property="og:description" 	content="Farrah Sit is an independent designer who creates sculptural lighting, furniture, and home objects. My hope was to create a logo reflective of her attention to detail and refined sensibility. There’s a delicate grace in all her inventive and structural designs.")
	meta(property="og:url" 			content="https://www.lagasa.com/farrah-sit.html")

