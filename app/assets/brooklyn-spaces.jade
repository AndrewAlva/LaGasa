extends templates/layout.jade

include _modules/_mixins-cases.jade

block title
	title Brooklyn Spaces | Suze LaGasa

block content
	include _modules/nav-menu.jade
	+nav-menu("work")

	#bs-wrapper.cases-page.page-wrapper.has-menu
		.inner-wrapper
			.content-grid
				//- include _modules/filters.jade

				.case-wrap
					+case_title("Brooklyn Spaces")
					+case_cover("bks/BKS01.jpg", "Brooklyn Spaces cover")


					._info
						+case_info("Designer", "The Monacelli Press", "https://www.monacellipress.com/", "May 2015")
						

						+case_description("As a guidebook for alternative and counter-culture creative spaces in Brooklyn, I took inspiration from industrial hand-lettering found on old warehouses. I set the many photographs in organic, loose compositions to convey the unstructured, free-wheeling nature of so many of the venues.", "https://www.amazon.com/dp/1580934285/")


					._inspiration
						.bks.images-container.col-12
							h5.subtitle.col-6.offset-1 Inspiration

							.single-img.col-4.push-1.p-a-b
								img(src="img/proj/bks/02_insp_1.jpg", alt="")

							.single-img.col-5.offset-1
								img(src="img/proj/bks/02_insp_2.jpg", alt="")


						.bks.images-container.col-3.offset-1
							.single-img.mb-80
								img(src="img/proj/bks/02_insp_4.jpg", alt="")

							.single-img
								img(src="img/proj/bks/02_insp_5.jpg", alt="")


						.bks.images-container.col-6.offset-1
							.single-img.mb-80
								img(src="img/proj/bks/02_insp_3.jpg", alt="")


							.col-12
								.single-img.fortyfour-8
									img(src="img/proj/bks/02_insp_6.jpg", alt="")

								.single-img.p-r-0.fortysix-4
									img(src="img/proj/bks/02_insp_7.jpg", alt="")



					._project-details
						+case_detailview("bks/BKS02.jpg", "Brooklyn Spaces book details", "middle")

						+case_detailview("bks/BKS03.jpg", "Brooklyn Spaces book details", "middle")
						+case_detailview("bks/BKS04.jpg", "Brooklyn Spaces book details", "")

						+case_credits(
							{role: 'Author', url: 'http://www.oriana-leckert.com/', name: 'Oriana Leckert'},
							{role: 'Photography', url: 'https://www.walterwlodarczyk.com/', name: 'Walter Wlodarczyk'},
							{role: '', url: 'http://www.blase.photography/', name: 'Michael Blase'},
							{role: '', url: 'https://www.flickr.com/photos/provide/', name: 'Kit Crenshaw'},
							{role: '', url: 'https://www.alixpiorun.com/', name: 'Alix Piorun'},
							{role: '', url: 'http://brooklyn-spaces.com/about/', name: 'and more...'}
						)
									

						+case_detailview("bks/BKS05.jpg", "Brooklyn Spaces book details", "")


				+case_nextproject('Getting to Good', 'getting-to-good.html')

				+case_moreinfo(
					"Designer",
					"The Monacelli Press",
					"https://www.monacellipress.com/",
					"May 2015",
					"As a guidebook for alternative and counter-culture creative spaces in Brooklyn, I took inspiration from industrial hand-lettering found on old warehouses. I set the many photographs in organic, loose compositions to convey the unstructured, free-wheeling nature of so many of the venues.",
					"https://www.amazon.com/dp/1580934285/",
					{
						role: 'Author',
						url: 'http://www.oriana-leckert.com/',
						name: 'Oriana Leckert'
					},
					{
						role: 'Photography',
