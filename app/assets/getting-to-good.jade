extends templates/layout.jade

include _modules/_mixins-cases.jade

block title
	title Getting to Good – Suzanne LaGasa | Art Director & Graphic Designer

block description
	meta(name='description', content="This journal needed to communicate positivity and hope without skewing too feminine or saccharine. I worked with Booklyn-based illustrated Kath Nash to create a giftable and useful journal to help people suffering from depression.")

block og_meta
	meta(property="og:title" 		content="Getting to Good — designed by Suzanne LaGasa | Art Director & Graphic Designer")
	meta(property="og:description" 	content="This journal needed to communicate positivity and hope without skewing too feminine or saccharine. I worked with Booklyn-based illustrated Kath Nash to create a giftable and useful journal to help people suffering from depression.")
	meta(property="og:url" 			content="https://www.lagasa.com/getting-to-good.html")

