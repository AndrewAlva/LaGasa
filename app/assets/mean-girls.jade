			.inner-wrap 
				h2#nextTitle.goTo.hide
					span.transition M
					span.transition e
					span.transition a
					span.transition n
					span.transition.title-space 
					span.transition.left1-768 G
					span.transition i
					span.transition r
					span.transition l
					span.transition s














