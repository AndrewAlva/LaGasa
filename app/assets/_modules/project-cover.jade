mixin project-cover(size_position, img, title, client, link, extra_classes)
	.project-cover(class="#{size_position} #{extra_classes}")
		a(href="#{link}" title="#{title}")
			figure.photo-wrap.scrollTransform
				img(src="#{img}", alt="#{title}")

			.title 
				span.mask-container
					span.up-in #{title}
			.client 
				span.mask-container
					span.up-in for #{client}