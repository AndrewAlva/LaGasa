mixin filter(link, name, quantity, active="")
	a(href="#{link}" class="filter #{active}")
		span.name #{name}
		span.qty #{quantity}

header#proj-filters.filters-wrap
	.content-grid
		#filters-trigger.descriptor
			span.mask-container
				span.up-in Filter by.

		nav.categories
			+filter("#", "All", 12, "active")
			+filter("#", "Books", 9)
			+filter("#", "Branding", 3)